    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>
    </style>



    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFF5F5F5</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:background">#90757575</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">@color/cardview_dark_background</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="MyEditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">5</item>
        <item name="android:digits">0123456789.-</item>
        <item name="android:inputType">phone|numberDecimal</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#FFF5F5F5</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/cardview_dark_background</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>

    </style>

    <style name="MyEditTextStyle.lan">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">5</item>
        <item name="android:digits">0123456789.-</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#FFF5F5F5</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/cardview_dark_background</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:imeOptions">flagNoExtractUi</item>

    </style>

    <style name="MyCardViewStyle">
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
  <!--      <item name="card_view:cardBackgroundColor">#fff0f0f0</item>
        <item name="card_view:cardCornerRadius">8dp</item>
-->

    </style>
    <style name="MyCardViewStyle.lan">
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">310dp</item>
        <item name="android:layout_gravity">left</item>
   <!--     <item name="card_view:cardBackgroundColor">#fff0f0f0</item>
        <item name="card_view:cardCornerRadius">8dp</item>
-->
    </style>

    <style name="MyImageViewStyle">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">4dp</item>

    </style>
</resources>






