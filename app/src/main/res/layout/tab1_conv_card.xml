<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/SCView"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:isScrollContainer="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            style="@style/MyCardViewStyle"
            card_view:cardBackgroundColor="#fff0f0f0">

            <ImageView
                style="@style/MyImageViewStyle"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:contentDescription="geld"
                android:scaleType="centerCrop"
                card_view:srcCompat="@drawable/pic2_dollar2_fs8" />


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:columnCount="2"
                android:rowCount="2">

                <TextView
                    style="@style/MyTextViewStyle"
                    android:layout_column="0"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_row="0"


                    android:text="@string/usdollar"

                    />

                <TextView
                    style="@style/MyTextViewStyle"

                    android:layout_column="0"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_row="1"


                    android:text="@string/euro" />

                <EditText
                    android:id="@+id/editUSdollar"
                    style="@style/MyEditTextStyle"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:hint=""

                    />

                <EditText
                    android:id="@+id/editEuro"
                    style="@style/MyEditTextStyle"
                    android:layout_column="1"
                    android:layout_row="1"


                    />

            </GridLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/MyCardViewStyle"
            app:cardBackgroundColor="#fff0f0f0">

            <ImageView
                style="@style/MyImageViewStyle"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:contentDescription="laenge"

                android:scaleType="centerCrop"
                app:srcCompat="@drawable/pic2_inch_fs8" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:columnCount="3"
                android:rowCount="2">

                <TextView
                    android:id="@+id/textCM"
                    style="@style/MyTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="16dp"

                    android:layout_marginStart="16dp"
                    android:layout_row="1"
                    android:text="@string/cm" />

                <TextView
                    android:id="@+id/textInch"
                    style="@style/MyTextViewStyle"
                    android:layout_column="0"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"


                    android:layout_row="0"
                    android:text="@string/inch" />


                <EditText
                    android:id="@+id/editInch"
                    style="@style/MyEditTextStyle"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:digits="0123456789.-/"


                    />

                <EditText
                    android:id="@+id/editCenti"
                    style="@style/MyEditTextStyle"
                    android:layout_column="1"
                    android:layout_row="1" />

            </GridLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
